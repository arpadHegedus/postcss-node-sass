root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = unset
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yml}]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
trim_trailing_whitespace = false

[test/*.css]
insert_final_newline = false
